@media (max-width: 1199px)
    .minicart--fixed
        width: 100%
        height: 100%
        overflow: hidden

    .minicart
        position: fixed
        z-index: 200
        top: 0
        left: 0
        width: 100%
        height: 100%

        background: rgba(0,0,0, .5)

        visibility: hidden
        opacity: 0

        transition: all .2s ease-in-out

        &.minicart--actived
            visibility: visible
            opacity: 1

    .minicart__container
        position: fixed
        top: 0
        right: 0
        width: 300px
        height: 100%

        background: #ffffff

        transform: translateX(100%)
        transition: all .2s ease-in-out

        .minicart--actived &
            transform: translateX(0)

  .minicart__header
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin: 0 30px;
      border-bottom:1px solid #c4c5c7;
      height: 75px;

  .minicart__title
      color: #232323;
      flex: 1 1 auto;
      font-size: 20px;
      font-weight: 700;
      margin: 0;
      text-transform: uppercase;

    .minicart__close
        width: 45px
        height: 45px

        display: flex
        justify-content: center
        align-items: center

        color: #232323;
        font-size: 20px;

    .minicart__empty
        text-align: center
        padding: 20px

    .minicart__list
        margin: 0
        padding: 0

    .minicart__item
        position: relative
        max-height: 400px
        visibility: visible
        opacity: 1
        transition: all .4s ease-in-out

        + .minicart__item
            border-top: solid 1px #eee

    .minicart__link
        display: flex
        align-items: center
        list-style: none
        padding: 10px

        color: #666666

        &:hover
            text-decoration: none

    .minicart__info
        display: flex
        flex-wrap: wrap
        justify-content: space-between
        align-items: center
        margin-left: 15px

    .minicart__name
        font-size: 14px
        flex: 0 0 100%

    .minicart__image
        flex: 0 0 50px
        margin-right: 20px

    .minicart__qty
        font-size: 10px

    .minicart__price
        font-size: 14px

  .minicart__total
      display: flex;
      align-items: center;
      justify-content: space-between;
      background: #DADADD;
      padding: 12px 10px 12px 20px;
      font-size: 14px
      font-weight: 700

    .minicart__main
        height: calc(100% - 140px)

        overflow-y: auto

    .minicart__finish
        background: #232323
        color: #ffffff
        font-size: 16px
        font-weight: 700
        text-transform: uppercase

        height: 50px

        display: flex
        justify-content: center
        align-items: center

        &:hover
            background: #46186a

    .minicart--delete
        padding-top: 0
        padding-bottom: 0
        max-height: 0
        border: 0
        margin: 0
        opacity: 0
        visibility: hidden

        overflow: hidden

    .minicart__qty
      &:before
        content ' / '

@media (min-width: 1200px)


  // .cart:hover
  //   .cart__dropdown
  //     opacity 1
  //     visibility visible

  .cart__dropdown.actived 
    opacity: 1
    visibility: visible


  .minicart__list
    border-bottom 1px solid #c4c5c7
    margin 0 30px 20px 30px
    max-height 250px
    overflow auto
    width: 100%

  .minicart__item
    border-bottom 1px solid #e7e7e7
    padding-bottom 15px

    &:last-child
      border-bottom 0 none

  // .minicart__header
  //   display none

  .minicart__link
    align-items center
    display flex
    padding 0 15px

  .minicart__image
    align-items center
    display flex
    flex 0 0 auto
    justify-content center
    margin 0
    position relative
    width 60px

    img
      max-height 60px
      max-width 60px

  .minicart__info
    flex 1 1 auto
    margin-left: 15px;

  .minicart__name
    color #787878
    display block
    font-size 11px
    font-weight 400
    letter-spacing -.1px
    line-height 14px

  .minicart__details
    align-items baseline
    display flex
    justify-content space-between
    margin-bottom 10px

  .minicart__price
  .minicart__qty
    color #232323
    font-size 12px
    font-weight 600
    letter-spacing -.1px


  .minicart__total-label
    display block
    font-size 12px
    font-weight 600
    text-align center
    text-transform uppercase

  .minicart__total-price
    color #232323
    display block
    font-size 15px
    font-weight 600
    letter-spacing -.1px
    text-align center

  .minicart__finish
    border #813bb9
    background #813bb9
    border-radius 2px
    color white
    display block
    font-weight 700
    margin-top 10px
    padding 14px 0
    text-align center
    text-transform uppercase

    &:hover
      color white

.cart__dropdown
  display block